<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText_MName" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent" android:hint="Name"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/editText_MAge" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_MName"
            app:layout_constraintStart_toStartOf="@+id/editText_MName"
            app:layout_constraintEnd_toEndOf="@+id/editText_MName" android:inputType="number" android:hint="Age"/>
    <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_MSave" android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/editText_MAge"
            app:layout_constraintStart_toStartOf="@+id/editText_MAge"
            app:layout_constraintEnd_toEndOf="@+id/editText_MAge" android:onClick="openNoteList"/>
</android.support.constraint.ConstraintLayout>